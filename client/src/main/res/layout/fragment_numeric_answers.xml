<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_height="200dp">
        <TextView
                android:id="@+id/questionText"
                android:layout_width="wrap_content"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="16dp"
            android:text="@string/unesite_tacan_odgovor"
            android:layout_marginStart="16dp"/>

    <EditText
            android:id="@+id/answerInputView"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="44dp"
            android:focusableInTouchMode="false"
            android:backgroundTint="@color/colorPrimary"
            android:layout_height="wrap_content"/>

    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:layout_gravity="center"
            android:columnCount="3"
            android:orientation="horizontal">

        <Button
                android:id="@+id/numberOne"
                android:background="@android:drawable/btn_default"
                android:text="1"/>

        <Button
                android:id="@+id/numberTwo"
                android:background="@android:drawable/btn_default"
                android:text="2"/>

        <Button
                android:id="@+id/numberThree"
                android:background="@android:drawable/btn_default"
                android:text="3"/>


        <Button
                android:id="@+id/numberFour"
                android:background="@android:drawable/btn_default"
                android:text="4"/>

        <Button
                android:id="@+id/numberFive"
                android:background="@android:drawable/btn_default"
                android:text="5"/>

        <Button
                android:id="@+id/numberSix"
                android:background="@android:drawable/btn_default"
                android:text="6"/>


        <Button
                android:id="@+id/numberSeven"
                android:background="@android:drawable/btn_default"
                android:text="7"/>

        <Button
                android:id="@+id/numberEight"
                android:background="@android:drawable/btn_default"
                android:text="8"/>

        <Button
                android:id="@+id/numberNine"
                android:background="@android:drawable/btn_default"
                android:text="9"/>

        <Button
                android:id="@+id/numberZero"
                android:background="@android:drawable/btn_default"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:text="0"/>

        <Button
                android:id="@+id/buttonClear"
                android:background="@android:drawable/btn_default"
                android:text="clear"/>

    </GridLayout>
</LinearLayout>